<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the solid color -->
    <solid android:color="#FFFFFF" /> <!-- Optional, white background -->

    <!-- Define the corner radius for rounded corners -->
    <corners android:radius="10dp" /> <!-- Adjust radius as needed for the roundness -->

    <!-- Optionally, add a border (stroke) -->
    <stroke
        android:width="2dp"
        android:color="@color/green" /> <!-- Green border around the image -->

    <!-- Define width and height -->
    <size
        android:width="100dp"
        android:height="100dp" /> <!-- Set width and height as needed -->

</shape>
